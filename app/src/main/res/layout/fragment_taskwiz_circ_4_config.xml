<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:theme="@style/TRADR"
    tools:context="tradr.app.activities.map.TaskWizFragment_Circle_4_Config">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAltitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altitude: "
                        android:textColor="@color/white"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_altitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textStyle="italic"></TextView>

                    <TextView
                        android:id="@+id/textViewAltitudeUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="[m]"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarCircAltitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewNoWaypoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. waypoints: "
                        android:textColor="@color/white"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_num_of_waypoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="italic"></TextView>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarCircNumberOfWaypoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed: "
                        android:textColor="@color/white"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textStyle="italic"></TextView>

                    <TextView
                        android:id="@+id/textViewSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="[m/s]"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarCircSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewGimbalPitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gimbal Pitch: "
                        android:textColor="@color/white"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_gimbal_pitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="@color/white"
                        android:textStyle="italic"></TextView>

                    <TextView
                        android:id="@+id/textViewGimbalPitchUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="1dp"
                        android:text="Â°"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarCircGimbalPitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/back"
                        android:backgroundTint="@android:color/holo_red_light" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/next"
                        android:backgroundTint="@android:color/holo_red_light" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
